<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bitki"
    android:background="#F5F0ED">


    <ImageView
        android:id="@+id/bitki"
        android:layout_width="162dp"
        android:layout_height="152dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cck2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="270dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/czg2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bitki">

        <TextView
            android:id="@+id/bitkibilgi"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text=" Bolu Patatesi"
            android:textColor="#131313"
            android:textSize="24sp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="386dp"
        android:layout_height="433dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.120000005">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tprk"
                    android:layout_width="97dp"
                    android:layout_height="88dp"
                    app:srcCompat="@drawable/toprak" />

                <TextView
                    android:id="@+id/trpk2"
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:gravity="fill_vertical"
                    android:text="Toprak Türü:"
                    android:textColor="#191717"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/toprak"
                    android:layout_width="141dp"
                    android:layout_height="77dp"
                    android:layout_weight="1"
                    android:gravity="center|fill_vertical"
                    android:text="Kili Toprak"
                    android:textColor="#191717"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/su3"
                    android:layout_width="97dp"
                    android:layout_height="88dp"
                    app:srcCompat="@drawable/su" />

                <TextView
                    android:id="@+id/suu"
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:gravity="fill_vertical"
                    android:text="Su Miktarı:"
                    android:textColor="#191717"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/su"
                    android:layout_width="141dp"
                    android:layout_height="77dp"
                    android:layout_weight="1"
                    android:gravity="center|fill_vertical"
                    android:text="4.3Lt"
                    android:textColor="#191717"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zmn"
                    android:layout_width="97dp"
                    android:layout_height="88dp"
                    app:srcCompat="@drawable/zaman" />

                <TextView
                    android:id="@+id/zmn2"
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:gravity="fill_vertical"
                    android:text="Sulama Sıklığı:"
                    android:textColor="#191717"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/zaman"
                    android:layout_width="141dp"
                    android:layout_height="77dp"
                    android:layout_weight="1"
                    android:gravity="center|fill_vertical"
                    android:text="5gün"
                    android:textColor="#191717"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/czg"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/blgi"
                    android:layout_width="353dp"
                    android:layout_height="153dp"
                    android:gravity="center|fill_vertical"
                    android:text="Ülkemizin birçok yöresinde üretilmesine rağmen Bolu Merkez ve ilçelerinde yaygın olarak yetiştirilen Bolu patatesinin yetiştirme teknikleri ve dayanıklılığı, özellikle de lezzeti bakımından ayrı bir yeri vardır. Bolu tarımının büyük bir kısmını patates üretimi sağlamakta ve mutfakta da en çok aranan ürün olması nedeniyle önemli düzeyde tüketilmektedir."
                    android:textColor="#191717"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:orientation="horizontal"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/htrltcON"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:onClick="hatirlatici"
        app:layout_constraintBottom_toBottomOf="@+id/bitki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toEndOf="@+id/bitki"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136"
        app:srcCompat="@drawable/saveon" />

    <ImageView
        android:id="@+id/htrltcOFF"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:onClick="hatirlatici"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/bitki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toEndOf="@+id/bitki"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136"
        app:srcCompat="@drawable/saveoff" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:onClick="home"
        app:layout_constraintBottom_toBottomOf="@+id/bitki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136"
        app:srcCompat="@drawable/home" />

</androidx.constraintlayout.widget.ConstraintLayout>